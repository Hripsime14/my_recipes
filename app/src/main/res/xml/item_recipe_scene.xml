<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imgRecipeIcon"
            android:layout_width="300sp"
            android:layout_height="300sp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="@+id/vwDivider" />
        <Constraint
            android:id="@+id/tvRecipeTitle"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/imgRecipeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="16sp"
            motion:layout_constraintTop_toTopOf="@id/imgRecipeIcon"
            android:alpha="0" />
        <Constraint
            android:id="@+id/tvRecipeDescription"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            motion:layout_constraintTop_toBottomOf="@id/tvRecipeTitle"
            motion:layout_constraintStart_toStartOf="@id/tvRecipeTitle"
            android:layout_marginTop="@dimen/default_margin"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>